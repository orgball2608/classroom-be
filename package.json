{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prepare": "test -d node_modules/husky && husky install || echo \"husky is not installed\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "dev:migrate": "yarn prisma migrate reset -f",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.9.1",
    "@nestjs/common": "^10.2.9",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.2.9",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.2.9",
    "@nestjs/swagger": "^7.1.15",
    "@prisma/client": "^5.6.0",
    "@swc/core": "^1.3.93",
    "aws-sdk": "^2.1498.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.0.0",
    "gts": "^5.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "17.11.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nestjs-redis": "^1.3.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.2.9",
    "@swc/cli": "^0.1.62",
    "@swc/jest": "^0.2.29",
    "@types/bcryptjs": "^2.4.4",
    "@types/compression": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.11",
    "@types/jest": "29.5.8",
    "@types/lodash": "^4.14.199",
    "@types/morgan": "^1.9.6",
    "@types/multer": "^1.4.10",
    "@types/node": "20.9.4",
    "@types/passport-jwt": "^3.0.10",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format",
      "git add ."
    ]
  },
  "postinstall": "husky install",
  "resolutions": {
    "wrap-ansi": "7.0.0",
    "string-width": "4.1.0"
  }
}
